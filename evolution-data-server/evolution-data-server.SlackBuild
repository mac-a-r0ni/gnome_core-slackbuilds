wget -c https://download.gnome.org/sources/evolution-data-server/3.46/evolution-data-server-3.46.3.tar.xz

PRGNAM=evolution-data-server
VERSION=${VERSION:-$(echo $PRGNAM-*.tar.?z | rev | cut -f 3- -d . | cut -f 1 -d - | rev)}
BUILD=${BUILD:-1}
TAG=${TAG:-_gcs}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i486 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

CWD=$(pwd)
TMP=${TMP:-/tmp/gcs}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}
JOBS=${JOBS:-" -j$(expr $(nproc) \+ 1 ) "}

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
elif [ "$ARCH" = "aarch64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xfv $CWD/$PRGNAM-$VERSION.tar.?z*
cd $PRGNAM-$VERSION

chown -R root:root .
find -L . \
 \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 \
  -o -perm 511 \) -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 640 -o -perm 600 -o -perm 444 \
  -o -perm 440 -o -perm 400 \) -exec chmod 644 {} \;

# Fix gtk-doc-1.32 build error.
# Patch by Mart Raudsepp (Gentoo Linux). Thanks!
patch -p1 -i $CWD/3.36.5-gtk-doc-1.32-compat.patch || true

mkdir -p build
cd build

cmake .. \
 -DCMAKE_C_FLAGS:STRING="$SLKCFLAGS" \
 -DCMAKE_CXX_FLAGS:STRING="$SLKCFLAGS" \
 -DCMAKE_BUILD_TYPE=Release \
 -DCMAKE_INSTALL_PREFIX=/usr \
 -DSYSCONF_INSTALL_DIR=/etc \
 -DLIB_SUFFIX=${LIBDIRSUFFIX} \
 -DLIBEXEC_INSTALL_DIR=/usr/libexec \
 -DENABLE_VALA_BINDINGS=ON \
 -DENABLE_INSTALLED_TESTS=OFF \
 -DWITH_OPENLDAP=OFF \
 -DWITH_KRB5=ON \
 -DENABLE_INTROSPECTION=ON \
 -DENABLE_GTK_DOC=OFF \
 -DWITH_PRIVATE_DOCS=ON \
 -DENABLE_SCHEMAS_COMPILE=ON \
 -DWITH_OPENLDAP=ON \
 -DENABLE_SMIME=ON \
 -DENABLE_GTK=ON \
 -DENABLE_CANBERRA=ON \
 -DENABLE_EXAMPLES=OFF \
 -DENABLE_GOA=ON \
 -DWITH_LIBDB=ON \
 -DENABLE_WEATHER=ON \
 -DENABLE_LARGEFILE=ON \
 -DWITH_PHONENUMBER=OFF \
 -DWITH_SUNLDAP=ON \
 -DWITH_SYSTEMDUSERUNITDIR=/usr/lib/systemd/user \
 -DENABLE_OAUTH2_WEBKITGTK4=OFF \
 -G Ninja

ninja $JOBS || ninja
DESTDIR=$PKG ninja install

find $PKG -print0 | xargs -0 file | grep -e "executable" -e "shared object" | grep ELF \
  | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

cd ..
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a COPYING ChangeLog MAINTAINERS NEWS README \
  $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$(basename $0) > $PKG/usr/doc/$PRGNAM-$VERSION/$(basename $0)

mkdir -p $PKG/install
cp $CWD/slack-desc $PKG/install

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-txz}
